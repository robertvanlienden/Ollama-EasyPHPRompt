{% extends 'base.html.twig' %}

{% block title %}Prompt type overview{% endblock %}

{% block body %}
    <h1>Prompt type overiew overview</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prompt prefix</th>
                <th>Prompt suffix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prompt_type in prompt_types %}
            <tr>
                <td>{{ prompt_type.id }}</td>
                <td>{{ prompt_type.name }}</td>
                <td>{{ prompt_type.promptPrefix }}</td>
                <td>{{ prompt_type.promptSuffix }}</td>
                <td>
                    <a href="{{ path('app_prompt_type_show', {'id': prompt_type.id}) }}">show</a>
                    <a href="{{ path('app_prompt_type_edit', {'id': prompt_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found <a href="{{ path('app_prompt_type_new') }}">Create your first</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>
        <a href="{{ path('app_prompt_type_new') }}" class="btn btn-success">Create new</a>
    </p>
{% endblock %}
